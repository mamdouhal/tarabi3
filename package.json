{
  "name": "tarabi3",
  "version": "1.0.0",
  "private": true,
  "description": "Tarabi3 - Digital Headquarters Website",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web && cd apps/web && npx opennextjs-cloudflare build",
    "dev:api": "npm run dev --workspace=apps/api",
    "build:api": "npm run build --workspace=apps/api",
    "deploy:api": "npm run deploy --workspace=apps/api",
    "deploy:web": "npm run deploy --workspace=apps/web",
    "deploy": "npm run deploy:api && npm run deploy:web"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
